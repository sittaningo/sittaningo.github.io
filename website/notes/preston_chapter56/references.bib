@article{Busch.2020, 
year = {2020}, 
keywords = {educational upgrading,gender wage gap,occupational gender segregation,skill,task,wage inequality}, 
title = {{Gender Segregation, Occupational Sorting, and Growth of Wage Disparities Between Women}}, 
author = {Busch, Felix}, 
